#!/bin/bash
host=`hostname`
dir=nv-go
if [[ "$host" == "pi4" ]]; then
	rsync -avz --exclude-from sync-exclude --delete sparta.local:~/dev/$dir/ ~/dev/$dir/
elif [[ "$host" == "orange" ]]; then
	rsync -avz --exclude-from sync-exclude --delete 192.168.2.12:~/dev/$dir/ ~/dev/$dir/
else
	rsync -avz --exclude-from sync-exclude --delete ~/dev/$dir/ pi4:~/dev/$dir/
fi
